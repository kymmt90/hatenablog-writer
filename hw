#!/usr/bin/env ruby

require './hb_writer'
require 'optparse'

USAGE = 'Usage: hw [-d | -u | -m] entry'

options = ARGV.getopts('dum')

if ARGV.size != 1 || (options['d'] && options['u'])
  warn USAGE
  exit
end

writer = HBWriter.new
entry_text = ''
open(ARGV[0], 'r') do |f|
  if options['d']
    entry_text = writer.delete_entry(f.read)
  elsif options['u']
    writer.update_entry(f.read)
  elsif options['m']
    writer.minor_update_entry(f.read)
  else
    entry_text = writer.post_entry(f.read)
  end
end

unless entry_text.empty?
  open(ARGV[0], 'w') do |f|
    f.write(entry_text)
  end
end
